<Window
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Abstand" Height="200" Width="350" Background="LightBlue" ResizeMode="CanMinimize" WindowStartupLocation ="CenterOwner">
      <Grid>
          <StackPanel Margin="5,15,5,5">
              <TextBlock Text="1. Button Klicken." Margin="5,0,0,0" Height="16" Foreground="#FFCA0079"/>
              <Button Content="aktualisieren" Click="aktualisieren" Width="300" Height="24" Margin="0,10,0,0" />

              <DockPanel Margin="5,5,0,0">
                  <TextBlock Text="2. Abstand eingeben. "  Height="16" Foreground="#FFCA0079"/>
                  <TextBox KeyDown="Setkey" x:Name="Abstand" Text="10" Margin="5,0,5,0" Width="50" InputMethod.IsInputMethodEnabled="False"/>
                  <TextBlock Text="mm"/>
              </DockPanel>
              <TextBlock Text="3. Fixes Kanalteil zuerst auswählen." Margin="5,5,5,0" Height="16" Foreground="#FFCA0079"/>
              <TextBlock Text="4. Zu verschiebendes Teil als zweites auswählen. " Margin="5,5,0,0" Height="16" Foreground="#FFCA0079"/>

          </StackPanel>
      </Grid>
  </Window>
