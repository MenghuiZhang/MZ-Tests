<Window
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          Title="TS-Startnummer:" Height="170" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" HorizontalContentAlignment="Center" >

    <Grid Margin="10">

        <StackPanel Grid.ColumnSpan="3" Margin="5,5,0,0">
            <DockPanel>
                <TextBlock Text="Start-Nr.:" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Top" Height="20" Width="55"/>
                <TextBox x:Name="startnr" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Text="1"  Height="20"  TextWrapping="Wrap" VerticalAlignment="Top" InputMethod.IsInputMethodEnabled="False" KeyDown="Setkey"/>
            </DockPanel>
            <DockPanel Margin="0,10,0,0">
                <TextBlock Text="BT-ID.:" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Top" Height="20" Width="55" HorizontalAlignment="Left"/>
                <ComboBox x:Name="btid" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" SelectedIndex="0"  Height="20"  VerticalAlignment="Top" IsEditable="True"/>
            </DockPanel>
            <Button Grid.Row="1" Grid.Column="2" Margin="10,10,10,0" Click="ok" Content="starten" Height="20"  />
        </StackPanel>

    </Grid>
</Window>
