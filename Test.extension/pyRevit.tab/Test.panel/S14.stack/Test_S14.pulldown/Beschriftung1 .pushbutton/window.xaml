    <Grid>
        <Border  CornerRadius="3" BorderThickness="1" BorderBrush="Gray" Margin="10,10,10,10">
            <StackPanel Margin="0,5,0,5">
                <StackPanel Margin="0,10,0,0">
                    <RadioButton x:Name="H" Content="Horizontal" Margin="10,0,0,0" IsChecked="True"/>
                    <RadioButton x:Name="y" Content="Vertikal" Margin="10,0,0,0"/>

                </StackPanel>
                <Button Content="beschriften" Click="manuell" Height="20" Margin="5,10,5,0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
