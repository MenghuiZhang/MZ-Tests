<Window
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          Title="Suche:" Height="125" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.ColumnSpan="3" Margin="5,5,0,0">
            <TextBlock Text="ElementId:" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Center" Height="20" Margin="0,0,10,0"/>
            <ComboBox x:Name="elemetid" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"  VerticalAlignment="Center"/>
        </DockPanel>

        <Button Grid.Row="1" Grid.Column="0" Margin="0" Click="Anzeigen" Content="anzeigen" Width="100" Height="24" />
        <Button Grid.Row="1" Grid.Column="1"  Margin="0" Click="OK" Content="auswählen" Height="24" Width="100" />
        <Button Grid.Row="1" Grid.Column="2" Margin="0" Click="Abbrechen" Content="schließen" Height="24" Width="100" />

    </Grid>
</Window>
