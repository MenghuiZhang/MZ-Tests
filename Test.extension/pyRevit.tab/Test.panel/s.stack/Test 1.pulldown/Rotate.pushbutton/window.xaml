<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verschiebung - nur in Grundrissansicht" Height="240" Width="300" Background="SkyBlue" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Text="Hinweis: zur Trennung der Dezimalstellen bitte einen Punkt verwenden (Bsp. 10.1)" Foreground="Red" TextWrapping="Wrap" Margin="10,5,0,5"/>
            <DockPanel Margin="10">
                <TextBlock Text="Verschiebung: "/>
                <TextBox  x:Name="zahl" Width="150" />
                <TextBlock Text=" mm"/>
            </DockPanel>
            <DockPanel Margin="10">
                <Button Content="X" Width="70" Height="20" Click="xrotate" Margin="40,0,0,0"/>

            </DockPanel>
            <DockPanel Margin="10">
                <Button Content="Y" Width="70" Height="20" Click="yrotate" Margin="40,0,0,0"/>

            </DockPanel>
            <DockPanel Margin="10">
                <Button Content="Z" Width="70" Height="20" Click="zrotate" Margin="40,0,0,0"/>

            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
