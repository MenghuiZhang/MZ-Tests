<Window
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="anpassen" Height="180" Width="250" Background="LightBlue" ResizeMode="NoResize" WindowStartupLocation ="CenterOwner">
    <Grid>
        <Border  CornerRadius="3" BorderThickness="1" BorderBrush="Gray" Margin="10,10,10,10">
            <StackPanel Margin="0,5,0,5">
                <TextBlock Text="Es gilt nur in Grundriss." Foreground="Red" Margin="5,0,0,0"/>
                <StackPanel Margin="0,10,0,0">
                    <RadioButton x:Name="x" Content="X ausrichten" Margin="10,0,0,0" IsChecked="True"/>
                    <RadioButton x:Name="y" Content="Y ausrichten" Margin="10,0,0,0"/>
                    <RadioButton x:Name="z" Content="Z ausrichten" Margin="10,0,0,0"/>
                </StackPanel>
                <Button Content="anpassen" Click="manuell" Height="20" Margin="5,10,5,0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
