<Window       
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suche:" Height="140" Width="400" MinHeight="150"
        WindowStartupLocation="CenterScreen" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBox  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" x:Name="guid" Height="22" Margin="1,10,10,10" TextWrapping="Wrap" Text=""/>
        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" Click="Anzeigen" Content="Anzeigen" />
        <Button Grid.Row="1" Grid.Column="2"  Margin="10" Click="OK" Content="OK" />
        <Button Grid.Row="1" Grid.Column="3" Margin="10" Click="Abbrechen" Content="Abbrechen" />
        <TextBox Grid.Row="0" Grid.Column="0"  Margin="5,10,5,10" TextWrapping="Wrap" Text="GUID:" BorderThickness="0" TextAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
