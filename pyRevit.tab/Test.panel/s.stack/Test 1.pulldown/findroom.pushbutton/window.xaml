<Window
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Raumnr:"  Height="135" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center" >
<Grid Margin="10">
  <Grid.RowDefinitions>
      <RowDefinition Height="50"/>
      <RowDefinition />
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
  </Grid.ColumnDefinitions>
  <StackPanel Grid.ColumnSpan="3" Margin="5,5,0,0">
      <DockPanel>
          <TextBlock Text="Raumnummer:" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Top" Height="20" Margin="0,0,10,0"/>
          <TextBox x:Name="raumnummer" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"  Height="20" TextWrapping="Wrap" VerticalAlignment="Top"/>
      </DockPanel>
  </StackPanel>
  <Button Grid.Row="1" Grid.Column="2" Margin="0" Click="ok" Content="OK" Height="20" Width="100" />

</Grid>
</Window>
